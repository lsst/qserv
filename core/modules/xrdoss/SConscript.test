# -*- python -*-
Import('env')
Import('cacheObjs')
Import('libProducts')
Import('defaultTgts')
Import('findLibs')

import os
import itertools


programs = []
ubuntuDeps = ["pthread"]
extDeps = ubuntuDeps + "boost_regex boost_system boost_thread mysqlclient_r ssl crypto log log4cxx XrdUtils".split()

modDeps = 'mysql obsolete sql wconfig wpublish'.split() # deps on other modules
deps = itertools.chain(*map(lambda m: defaultTgts[m], modDeps))
pDeps = itertools.chain(*map(lambda m: libProducts[m], ['xrdoss']))
pDeps = cacheObjs(env, pDeps, ".o")
deps = map(lambda i:i, itertools.chain(deps, pDeps)) # un-chain
deps.sort(key=str)

p = env.Program(['testQservOss.cc']+ deps, LIBS=findLibs(extDeps))
programs.append(p)

# add a unit test which runs on every build
utest = env.UnitTest(p)
env.Append(UNIT_TESTS=utest)

Return('programs')
