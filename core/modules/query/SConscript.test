# -*- python -*-
# Build test programs for qserv query package
Import('env')
Import('libProducts')
Import('defaultTgts')
Import('findLibs')
Import('cacheObjs')

import os
import itertools


programs = []
# extDeps
extDeps = "antlr boost_thread boost_system log log4cxx".split()

modDeps = 'global log'.split() # deps on other modules
pDeps = itertools.chain(*map(lambda m: libProducts[m], modDeps))
pDeps = cacheObjs(env, pDeps, ".o")

localdeps = map(env.Object, libProducts['query'])

p = env.Program(['testRepr.cc', ] + localdeps + pDeps,
                LIBS=findLibs(extDeps))
programs.append(p)

# add a unit test which runs on every build
utest = env.UnitTest(p)
env.Append(UNIT_TESTS=utest)

Return('programs')
