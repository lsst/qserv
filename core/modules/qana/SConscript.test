# -*- python -*-
# SConscript for qana
Import('env')
Import('libProducts')
Import('defaultTgts')
Import('findLibs')
Import('cacheObjs')

import os
import itertools


programs = []
# extDeps
extDeps = "antlr boost_thread boost_system log log4cxx zookeeper_mt".split()

modDeps = 'css global log query'.split() # deps on other modules
pDeps = itertools.chain(*map(lambda m: libProducts[m], modDeps))
pDeps = cacheObjs(env, pDeps, ".o")

localdeps = map(env.Object, 'QueryPlugin.cc QservRestrictorPlugin.cc'.split())
p = env.Program(['testPlugins.cc'] + localdeps + pDeps, LIBS=findLibs(extDeps))
programs.append(p)

Return('programs')
